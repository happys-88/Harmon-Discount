{# Page View Toggle Block #}
<div class="mz-grid-view-toggle-container btn-group">
    <button data-btn-view-toggle type="button" id="gridView" aria-label="{{labels.toggleGridView}}" class="active btn btn-default">
       <span class="mz-icon-lib mz-icon-th-grid"></span>
    </button>
    <button data-btn-view-toggle type="button" id="listView" aria-label="{{labels.toggleListView}}" class="btn btn-default">
      <span class="mz-icon-lib mz-icon-th-list"></span>
    </button>
</div>