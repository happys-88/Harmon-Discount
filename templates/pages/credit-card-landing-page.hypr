{% extends "page" %}  

{% block title-tag-content %}{% firstof pageContext.metaTitle model.name %}  - {% parent %}{% endblock title-tag-content %}
{% block body-tag-classes %} credit-card-landing-page {% endblock body-tag-classes %}

{% block body-content %} 
<div class="mz-customer-service-page">
    <div class="mz-l-container">
        <div class="row"> 
            
            <div class="col-xs-12 mz-l-creditCard">
                <div class="col-md-6 col-sm-6 col-xs-12 mz-l-card-img">
                    <a href="https://comenity.net/harmonfacevalues/pub/apply/ApplyIntro.xhtml?cmp=464_web_apply_webbtn"><img src="https://sep.yimg.com/ay/yhst-29523360387793/harmon-credit-card-19.gif" alt="Harmon Face Values Mastercard credit card"></a>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12 mz-l-card-img">
                    <img src="https://sep.yimg.com/ay/yhst-29523360387793/harmon-credit-card-20.gif" alt="Harmon Face Values Mastercard credit card">
                </div>
                <div class="mz-l-card-account col-xs-12">
